{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container">
    <div class="row gx-3 ">
  
      <div class="col-md-6">
        <h1>{{app.user.name}} {{app.user.firstName}}</h1>
        {% if is_granted("ROLE_CLIENT") %}
          <h4 class="mb-3">({{app.user.companyName}})</h4>
        {% endif %}
        <p> <i class="fa-regular fa-envelope"></i>  {{app.user.email}} </p>
        <p> <i class="fa-solid fa-location-dot"></i>  {{app.user.adress}}</p>
        <p> <i class="fa-solid fa-phone"></i>  {{app.user.phone}}</p>
        {% if is_granted("ROLE_DEV") %}
          <h4>Comp√©tences :</h4>
          <p class="mb-3">{{app.user.skill}}</p>
          <h4> Descrption : </h4>
          <p class="mb-3">{{app.user.description}}</p>
        {% endif %}
     </div>
    
      <div class="col-md-6">
        <h1></h1>
      </div>
  
    </div>
  </div>
  
    

{% endblock %}
