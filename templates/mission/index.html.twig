{% extends 'base.html.twig' %}

{% block title %}Hello MissionController!{% endblock %}
{% block stylesheets %}
    <link rel = "stylesheet" href = "{{asset ("css/offerRegister.css")}}">
{% endblock %}
{% block body %}

    {% if is_granted("ROLE_CLIENT") %}
        <h2 class="text-center title mt-3">Créer Offre</h2>
                <div class="container square-boxOffer d-flex justify-content-center align-items-center p-4 mb-5">
                    
                    {{ form_start(registrationForm) }}
                        <div class=" mx-sm-3 mb-2">
                        {{ form_widget(registrationForm.job, {'attr' : {'placeholder': 'Job','class' : 'form-control'}}) }}
                        </div>
                        <div class="form-group mx-sm-3 mb-2">
                        {{ form_widget(registrationForm.company, {'attr' : {'placeholder': 'Nom de la Société','class' : 'form-control'}}) }}
                    </div>
                    <div class="form-group mx-sm-3 mb-2">
                        {{ form_widget(registrationForm.localization, {'attr' : {'placeholder': 'Ville', 'class' : 'form-control'}}) }}
                    </div>
                    <div class="form-group mx-sm-3 mb-2">
                        {{ form_widget(registrationForm.contract, {'attr' : {'placeholder': 'CDD/CDI', 'class' : 'form-control'}}) }}
                    </div>
                    <div class="form-group mx-sm-3 mb-2">
                        {{ form_widget(registrationForm.duration, {'attr' : {'placeholder': 'Mi-temps/Plein temps', 'class' : 'form-control'}})}}
                    </div>
                    <div class="form-group mx-sm-3 mb-2">    
                        {{ form_widget(registrationForm.salary, {'attr' : {'placeholder': 'salaire', 'class' : 'form-control'}}) }}
                    </div>
                    <div class="form-group mx-sm-3 mb-4">    
                        {{ form_widget(registrationForm.description, {'attr' : {'placeholder': 'Descritpion', 'class' : 'form-control', id: 't1'}})}}        
                    </div>
                    <div class="form-group mx-sm-3 mb-4">
                        <label class="text-white">Date début</label>
                        {{ form_widget(registrationForm.startDate, {'attr' : {'label': 'date de début'}})}}        
                    </div>
                    <div class="form-group mx-sm-3 mb-4"> 
                        <label class="text-white" >Date fin (si CDD)</label>
                            {{ form_widget(registrationForm.endDate, {'attr' : {'placeholder': 'date de Fin si CDD',}})}}        
                    </div>
                        <button type="submit" class="btn btn text-white">Valider</button>
                    {{ form_end(registrationForm) }}
                
                </div>  
    {% endif %}
    <p>{{app.user.id}}</p>      
{% endblock %}
