{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}
{% block stylesheets %}
    <link rel = "stylesheet" href = "{{asset ("css/register.css")}}">
{% endblock %}
{% block body %}
<h2 class="text-center mt-5 title">Inscrption</h2>
        <div class="container square-box d-flex justify-content-center align-items-center p-5">
            
            {{ form_start(registrationForm) }}
                <div class=" mx-sm-3 mb-2">
                {{ form_widget(registrationForm.email, {'attr' : {'class' : 'form-control'}}) }}
                </div>
                <div class="form-group mx-sm-3 mb-2">
                {{ form_widget(registrationForm.plainPassword, {'attr' : {'class' : 'form-control'}}) }}
            </div>
            <div class="form-group mx-sm-3 mb-2">
                {{ form_widget(registrationForm.name, {'attr' : {'placeholder': 'Nom : Dupont', 'class' : 'form-control'}}) }}
            </div>
            <div class="form-group mx-sm-3 mb-2">
                {{ form_widget(registrationForm.firstName, {'attr' : {'placeholder': 'Prénom : Jean', 'class' : 'form-control'}}) }}
            </div>
            <div class="form-group mx-sm-3 mb-2">
                {{ form_widget(registrationForm.phone, {'attr' : {'placeholder': 'tel : 098765433', 'class' : 'form-control'}}) }}
            </div>
            <div class="form-group mx-sm-3 mb-2">
                {{ form_widget(registrationForm.adress, {'attr' : {'placeholder': '12 rue du Lac', 'class' : 'form-control'}})}}
            </div>
            <div class="form-group mx-sm-3 mb-2">    
                {{ form_widget(registrationForm.description, {'attr' : {'placeholder': 'Description personelle', 'class' : 'form-control'}}) }}
            </div>
            <div class="form-group mx-sm-3 mb-4">    
                {{ form_widget(registrationForm.skill, {'attr' : {'placeholder': 'Compétences', 'class' : 'form-control'}})}}        
            </div>
                <button type="submit" class="btn btn text-white">Valider</button>
            {{ form_end(registrationForm) }}
        
        </div>  
{% endblock %}
 